<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trees.Views.EdytujSprzedazPage"
             Title="Edytuj Sprzedaż">
    <StackLayout Padding="20">
        <Label Text="Cena" />
        <Entry x:Name="CenaEntry" Text="{Binding Cena}" Keyboard="Numeric"/>

        <Label Text="Ilość" />
        <Entry x:Name="IloscEntry" Text="{Binding Ilosc}" Keyboard="Numeric"/>

        <Button Text="Zapisz" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>
