<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trees.Views.ZobaczSprzedazPage">

    <CollectionView x:Name="SprzedazCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame>
                    <StackLayout>
                        <Label Text="{Binding NazwaGatunku}" />
                        <Label Text="{Binding WielkoscID}" />
                        <Label Text="{Binding Cena}" />
                        <Label Text="{Binding Ilosc}" />
                        <Label Text="{Binding CalkowitaCena}" />
                        <Label Text="{Binding DataSprzedazy}" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
