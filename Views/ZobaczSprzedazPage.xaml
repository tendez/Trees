<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trees.Views.ZobaczSprzedazPage">

    <CollectionView x:Name="SprzedazCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame>
                    <StackLayout>
                        <Label Text="{Binding NazwaGatunku, StringFormat='Nazwa Gatunku: {0}'}" />
                        <Label Text="{Binding OpisWielkosci, StringFormat='Opis Wielkosci: {0}'}" />
                        <Label Text="{Binding Cena, StringFormat='Cena: {0}pln'}" />
                        <Label Text="{Binding Ilosc, StringFormat='Ilosc: {0}'}" />
                        <Label Text="{Binding CalkowitaCena, StringFormat='Calkowita Cena: {0}pln'}" />
                        <Label Text="{Binding DataSprzedazy, StringFormat='Data Sprzedazy: {0}'}" />
                        <Label Text="{Binding Login, StringFormat='Login: {0}'}" />
                        <Label Text="{Binding StoiskoNazwa, StringFormat='Nazwa stoiska: {0}'}" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
