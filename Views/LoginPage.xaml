<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trees.Views.LoginPage">
    <StackLayout Padding="30">
        <Label Text="Logowanie" FontSize="36" HorizontalOptions="Center"/>
        <Entry Placeholder="Nazwa użytkownika" x:Name="UsernameEntry"/>
        <Entry Placeholder="Hasło" x:Name="PasswordEntry" IsPassword="True"/>
        <Button Text="Zaloguj się" Clicked="OnLoginButtonClicked"/>
        <Label x:Name="LoginStatusLabel" TextColor="Red" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>